{% extends 'base.html.twig' %}

{% block title %}Créer une sortie{% endblock %}

{% block body %}
    <style>
        .hide {
            display: none;
        }
    </style>

    <h1>Créer une sortie</h1>

    {{ form_start(form) }}
    <div id="sortie">

        {% if form_errors(form.nom)|length or form_errors(form.dateHeureDebut)|length or
            form_errors(form.dateLimiteInscription)|length or form_errors(form.duree)|length
            or form_errors(form.campus)|length or form_errors(form.lieu)|length or form_errors(form.infosSortie)|length %}
            <div class="row large alert alert-warning">
                {{ form_errors(form.nom) }}
                {{ form_errors(form.dateHeureDebut) }}
                {{ form_errors(form.dateLimiteInscription) }}
                {{ form_errors(form.duree) }}
                {{ form_errors(form.campus) }}
                {{ form_errors(form.lieu) }}
                {{ form_errors(form.infosSortie) }}
            </div>
        {% endif %}

        <div class="col">
            <div class="row form-group">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom) }}
            </div>
            <div class="row form-group">
                {{ form_label(form.dateHeureDebut) }}
                {{ form_widget(form.dateHeureDebut) }}
            </div>
            <div class="row form-group">
                {{ form_label(form.dateLimiteInscription) }}
                {{ form_widget(form.dateLimiteInscription) }}
            </div>
            <div class="row form-group">
                {{ form_label(form.nbInscriptionMax) }}
                {{ form_widget(form.nbInscriptionMax) }}
            </div>
            <div class="row form-group">
                {{ form_label(form.duree) }}
                {{ form_widget(form.duree) }}
            </div>
        </div>

        <div class="col">
            <div class="row form-group">
                {{ form_label(form.campus) }}
                {{ form_widget(form.campus) }}
            </div>
            <div class="row form-group">
                {{ form_label(form.ville) }}
                {{ form_widget(form.ville) }}
            </div>
            <div class="row form-group">
                {{ form_label(form.lieu) }}
                {{ form_widget(form.lieu) }}
            </div>

            {% for l in lieux %}
                <div id="group-{{ l.id }}" class="lieux hide">
                    <div class="row form-group">
                        <label for="rue">Rue : </label>
                        <input id="rue" type="text" class="form-control form-control-sm" value="{{ l.rue }}" disabled/>
                    </div>
                    <div class="row form-group">
                        <label for="cp">Code Postal : </label>
                        <input id="cp" type="text" class="form-control form-control-sm" value="{{ l.ville.codePostal }}" disabled/>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="row large">
            {{ form_label(form.infosSortie) }}
            {{ form_widget(form.infosSortie) }}
        </div>

        <div class="row large button-group">
            {{ form_widget(form.etatSave) }}
            {{ form_widget(form.etatPost) }}
            <a href="{{ path('home') }}">
                <button type="button" class="btn btn-primary">Retour à la liste</button>
            </a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function () {
            let lieuDivs = Array.prototype.slice.call(document.getElementsByClassName("lieux"));
            let lieuSelect = document.getElementById('sortie_lieu');
            let villeSelect = document.getElementById('sortie_ville');

            function afficherLieu(event) {
                lieuDivs.forEach(el => el.classList.add("hide"));
                let selected = event.target.value;
                let group = document.getElementById('group-' + selected);
                if (group) {
                    group.classList.remove("hide");
                }
            }

            if (lieuSelect) {
                lieuSelect.addEventListener("change", afficherLieu);
            }

            if (villeSelect) {
                villeSelect.addEventListener('change', function (event) {
                    console.log("Ville changée :", event.target.value);
                    let villeId = event.target.value;

                    if (villeId) {
                        fetch('{{ path('get_lieux_by_ville') }}', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded',
                            },
                            body: 'villeId=' + villeId
                        })
                            .then(response => response.json())
                            .then(data => {
                                console.log('Données des lieux:', data);
                                let lieuSelect = document.getElementById('sortie_lieu');
                                lieuSelect.innerHTML = '';

                                let defaultOption = document.createElement('option');
                                defaultOption.value = '';
                                defaultOption.textContent = 'Sélectionnez un lieu';
                                lieuSelect.appendChild(defaultOption);

                                data.forEach(lieu => {
                                    let option = document.createElement('option');
                                    option.value = lieu.id;
                                    option.textContent = lieu.nom;
                                    lieuSelect.appendChild(option);
                                });

                                lieuSelect.disabled = false;
                            })
                            .catch(error => {
                                console.error('Erreur:', error);
                                alert('Erreur lors du chargement des lieux');
                            });
                    } else {
                        lieuSelect.disabled = true;
                        lieuSelect.innerHTML = '';
                    }
                });
            }
        });
    </script>
{% endblock %}
