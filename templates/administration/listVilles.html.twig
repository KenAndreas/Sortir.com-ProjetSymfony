{% extends 'base.html.twig' %}

{% block title %}Hello AdministrationController!{% endblock %}

{% block body %}
    <div class="container-xl">
        <h1>Liste des villes</h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>nom</th>
                <th>code postal</th>
            </tr>
            </thead>
            <tbody>
            {% for u in villes %}
                <tr>
                    <td>
                        {{ u.nom }}
                    </td>
                    <td>
                        {{ u.codePostal }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}

