{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Modifier votre profil</h1>

        {# Afficher la photo de profil si elle existe #}
        {% if user.photo %}
            <img src="{{ asset('uploads/profils/' ~ user.photo) }}" alt="Photo de profil" class="img-thumbnail" width="200">
        {% else %}
            <p>Aucune photo de profil définie.</p>
        {% endif %}


        {{ form_start(form) }}

        <div class="mb-1">
            {{ form_row(form.campus, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-1">
            {{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-1">
            {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-1">
            {{ form_row(form.pseudo, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-1">
            {{ form_row(form.mail, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-1">
            {{ form_row(form.telephone, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-1">
            {{ form_row(form.motDePasse, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button type="submit" class="btn btn-primary mt-2">Mettre à jour</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
